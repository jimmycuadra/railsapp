source :rubygems

gem 'rails', '3.1.0'

# Assets
gem 'jquery-rails'
gem 'sass-rails'
gem 'coffee-rails'
gem 'uglifier'

# Server
gem 'thin'

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'foreman'
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'factory_girl_rails'
  gem 'simplecov'
  gem 'rb-fsevent'
  gem 'growl_notify'
end
